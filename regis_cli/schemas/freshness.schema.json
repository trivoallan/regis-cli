{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://regis-cli/schemas/freshness.schema.json",
  "title": "Freshness Analyzer Report",
  "description": "Image age and delta versus latest tag.",
  "type": "object",
  "required": ["analyzer", "repository", "tag", "tag_created", "latest_created", "age_days", "behind_latest_days", "is_latest"],
  "properties": {
    "analyzer": { "type": "string", "const": "freshness" },
    "repository": { "type": "string" },
    "tag": { "type": "string" },
    "tag_created": { "type": ["string", "null"] },
    "latest_created": { "type": ["string", "null"] },
    "age_days": { "type": ["integer", "null"], "minimum": 0 },
    "behind_latest_days": { "type": ["integer", "null"], "minimum": 0 },
    "is_latest": { "type": "boolean" }
  },
  "additionalProperties": false
}

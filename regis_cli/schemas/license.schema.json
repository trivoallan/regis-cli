{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://regis-cli/schemas/license.schema.json",
  "title": "License Analyzer Report",
  "description": "License information for the image or its source project.",
  "type": "object",
  "required": ["analyzer", "repository", "spdx_id", "license_url", "detection_source"],
  "properties": {
    "analyzer": { "type": "string", "const": "license" },
    "repository": { "type": "string" },
    "spdx_id": { "type": ["string", "null"], "description": "SPDX license identifier." },
    "license_url": { "type": ["string", "null"] },
    "detection_source": { "type": ["string", "null"], "enum": ["image-label", "github-api", null] }
  },
  "additionalProperties": false
}

{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://regis-cli/schemas/vulnerabilities.schema.json",
  "title": "Vulnerabilities Analyzer Report",
  "description": "Known vulnerabilities from OSV.dev.",
  "type": "object",
  "required": ["analyzer", "repository", "tag", "package_name", "version_queried", "osv_available", "vulnerability_count", "vulnerabilities"],
  "properties": {
    "analyzer": { "type": "string", "const": "vulnerabilities" },
    "repository": { "type": "string" },
    "tag": { "type": "string" },
    "package_name": { "type": "string" },
    "version_queried": { "type": ["string", "null"] },
    "osv_available": { "type": "boolean" },
    "vulnerability_count": { "type": "integer", "minimum": 0 },
    "vulnerabilities": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["id", "summary", "cve_ids", "severity", "published", "modified", "osv_url"],
        "properties": {
          "id": { "type": "string" },
          "osv_url": { "type": "string" },
          "summary": { "type": "string" },
          "cve_ids": { "type": "array", "items": { "type": "string" } },
          "severity": { "type": "string" },
          "published": { "type": ["string", "null"] },
          "modified": { "type": ["string", "null"] }
        },
        "additionalProperties": false
      }
    }
  },
  "additionalProperties": false
}

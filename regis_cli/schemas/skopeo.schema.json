{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Skopeo Analyzer Report",
  "type": "object",
  "required": ["analyzer", "repository", "tag", "platforms"],
  "properties": {
    "analyzer": {
      "type": "string",
      "const": "skopeo"
    },
    "repository": {
      "type": "string"
    },
    "tag": {
      "type": "string"
    },
    "inspect": {
      "type": "object",
      "description": "Raw output from primary skopeo inspect"
    },
    "platforms": {
      "type": "array",
      "description": "List of platform variants available for this tag.",
      "items": {
        "type": "object",
        "required": ["architecture", "os"],
        "properties": {
          "architecture": { "type": "string" },
          "os": { "type": "string" },
          "variant": { "type": ["string", "null"] },
          "digest": { "type": "string" },
          "created": { "type": ["string", "null"] },
          "labels": {
            "type": "object",
            "additionalProperties": { "type": "string" }
          },
          "layers_count": { "type": "integer", "minimum": 0 },
          "user": { "type": ["string", "null"] }
        }
      }
    },
    "tags": {
      "type": "array",
      "description": "List of tags associated with the repository.",
      "items": { "type": "string" }
    }
  },
  "additionalProperties": false
}

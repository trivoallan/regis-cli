{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://regis-cli/schemas/endoflife.schema.json",
  "title": "End-of-Life Analyzer Report",
  "description": "Report containing lifecycle information from endoflife.date.",
  "type": "object",
  "required": ["analyzer", "repository", "product", "product_found", "tag", "matched_cycle", "is_eol", "active_cycles_count", "eol_cycles_count"],
  "properties": {
    "analyzer": {
      "type": "string",
      "const": "endoflife"
    },
    "repository": {
      "type": "string"
    },
    "product": {
      "type": "string",
      "description": "Product slug used to query endoflife.date."
    },
    "product_found": {
      "type": "boolean",
      "description": "Whether the product was found on endoflife.date."
    },
    "tag": {
      "type": "string",
      "description": "Image tag that was analyzed."
    },
    "matched_cycle": {
      "type": ["object", "null"],
      "description": "Release cycle matching the image tag, or null if no match.",
      "properties": {
        "cycle": { "type": "string" },
        "release_date": { "type": ["string", "null"] },
        "eol": { "type": ["string", "boolean"] },
        "latest": { "type": ["string", "null"] },
        "latest_release_date": { "type": ["string", "null"] },
        "lts": { "type": "boolean" }
      },
      "additionalProperties": false
    },
    "is_eol": {
      "type": ["boolean", "null"],
      "description": "Whether the matched cycle has reached end-of-life. Null if no match."
    },
    "active_cycles_count": {
      "type": ["integer", "null"],
      "minimum": 0,
      "description": "Number of currently supported release cycles."
    },
    "eol_cycles_count": {
      "type": ["integer", "null"],
      "minimum": 0,
      "description": "Number of end-of-life release cycles."
    }
  },
  "additionalProperties": false
}

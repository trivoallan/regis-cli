{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://regis-cli/schemas/versioning.schema.json",
  "title": "Versioning Analyzer Report",
  "description": "Report analyzing tag naming conventions and semver adoption.",
  "type": "object",
  "required": ["analyzer", "repository", "total_tags", "dominant_pattern", "semver_compliant_percentage", "patterns", "variants"],
  "properties": {
    "analyzer": {
      "type": "string",
      "const": "versioning"
    },
    "repository": {
      "type": "string"
    },
    "total_tags": {
      "type": "integer",
      "minimum": 0
    },
    "dominant_pattern": {
      "type": "string",
      "enum": ["semver", "semver-prerelease", "semver-variant", "calver", "numeric", "hash", "named", "unknown"]
    },
    "semver_compliant_percentage": {
      "type": "number",
      "minimum": 0,
      "maximum": 100
    },
    "patterns": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["pattern", "count", "percentage", "examples"],
        "properties": {
          "pattern": {
            "type": "string",
            "enum": ["semver", "semver-prerelease", "semver-variant", "calver", "numeric", "hash", "named"]
          },
          "count": {
            "type": "integer",
            "minimum": 0
          },
          "percentage": {
            "type": "number",
            "minimum": 0,
            "maximum": 100
          },
          "examples": {
            "type": "array",
            "items": { "type": "string" },
            "maxItems": 10
          }
        },
        "additionalProperties": false
      }
    },
    "variants": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["name", "count", "percentage", "examples"],
        "properties": {
          "name": {
            "type": "string"
          },
          "count": {
            "type": "integer",
            "minimum": 0
          },
          "percentage": {
            "type": "number",
            "minimum": 0,
            "maximum": 100
          },
          "examples": {
            "type": "array",
            "items": { "type": "string" },
            "maxItems": 10
          }
        },
        "additionalProperties": false
      }
    }
  },
  "additionalProperties": false
}

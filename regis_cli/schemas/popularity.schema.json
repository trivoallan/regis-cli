{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://regis-cli/schemas/popularity.schema.json",
  "title": "Popularity Analyzer Report",
  "description": "Docker Hub popularity statistics.",
  "type": "object",
  "required": ["analyzer", "repository", "available", "pull_count", "star_count", "description", "last_updated", "date_registered", "is_official"],
  "properties": {
    "analyzer": { "type": "string", "const": "popularity" },
    "repository": { "type": "string" },
    "available": { "type": "boolean" },
    "pull_count": { "type": ["integer", "null"] },
    "star_count": { "type": ["integer", "null"] },
    "description": { "type": ["string", "null"] },
    "last_updated": { "type": ["string", "null"] },
    "date_registered": { "type": ["string", "null"] },
    "is_official": { "type": "boolean" }
  },
  "additionalProperties": false
}

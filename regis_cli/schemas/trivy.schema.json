{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://regis-cli/schemas/trivy.schema.json",
  "title": "Trivy Analyzer Report",
  "description": "Vulnerability scan results from Trivy.",
  "type": "object",
  "required": [
    "analyzer",
    "repository",
    "tag",
    "trivy_version",
    "vulnerability_count",
    "critical_count",
    "high_count",
    "medium_count",
    "low_count",
    "unknown_count",
    "targets"
  ],
  "properties": {
    "analyzer": {
      "type": "string",
      "const": "trivy"
    },
    "repository": {
      "type": "string"
    },
    "tag": {
      "type": "string"
    },
    "trivy_version": {
      "type": "string"
    },
    "vulnerability_count": {
      "type": "integer",
      "minimum": 0
    },
    "critical_count": {
      "type": "integer",
      "minimum": 0
    },
    "high_count": {
      "type": "integer",
      "minimum": 0
    },
    "medium_count": {
      "type": "integer",
      "minimum": 0
    },
    "low_count": {
      "type": "integer",
      "minimum": 0
    },
    "unknown_count": {
      "type": "integer",
      "minimum": 0
    },
    "targets": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "Target",
          "Vulnerabilities"
        ],
        "properties": {
          "Target": {
            "type": "string"
          },
          "Vulnerabilities": {
            "type": ["array", "null"],
            "items": {
              "type": "object",
              "required": [
                "VulnerabilityID",
                "PkgName",
                "InstalledVersion",
                "Severity"
              ],
              "properties": {
                "VulnerabilityID": {
                  "type": "string"
                },
                "PkgName": {
                  "type": "string"
                },
                "InstalledVersion": {
                  "type": "string"
                },
                "FixedVersion": {
                  "type": "string"
                },
                "Severity": {
                  "type": "string"
                },
                "Title": {
                  "type": "string"
                },
                "Description": {
                  "type": "string"
                }
              }
            }
          }
        }
      }
    }
  },
  "additionalProperties": false
}

{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://regis-cli/schemas/sbom.schema.json",
  "title": "SBOM Analyzer Report",
  "description": "Software Bill of Materials extracted from a container image using Trivy (CycloneDX).",
  "type": "object",
  "required": [
    "analyzer",
    "repository",
    "tag",
    "has_sbom",
    "sbom_format",
    "sbom_version",
    "total_components",
    "component_types",
    "total_dependencies",
    "licenses",
    "components"
  ],
  "properties": {
    "analyzer": { "type": "string", "const": "sbom" },
    "repository": { "type": "string" },
    "tag": { "type": "string" },
    "has_sbom": { "type": "boolean" },
    "sbom_format": { "type": "string" },
    "sbom_version": { "type": "string" },
    "total_components": { "type": "integer", "minimum": 0 },
    "component_types": {
      "type": "object",
      "description": "Count of components grouped by type (library, application, framework, â€¦).",
      "additionalProperties": { "type": "integer", "minimum": 0 }
    },
    "total_dependencies": { "type": "integer", "minimum": 0 },
    "licenses": {
      "type": "array",
      "description": "Sorted unique license identifiers found across all components.",
      "items": { "type": "string" }
    },
    "components": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["name", "type"],
        "properties": {
          "name": { "type": "string" },
          "version": { "type": ["string", "null"] },
          "type": { "type": "string" },
          "purl": { "type": ["string", "null"] },
          "licenses": {
            "type": "array",
            "items": { "type": "string" }
          }
        },
        "additionalProperties": false
      }
    }
  },
  "additionalProperties": false
}

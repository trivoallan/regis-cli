{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://regis-cli/schemas/size.schema.json",
  "title": "Size Analyzer Report",
  "description": "Image size breakdown.",
  "type": "object",
  "required": ["analyzer", "repository", "tag", "multi_arch", "total_compressed_bytes", "total_compressed_human", "layer_count", "config_size_bytes", "layers", "platforms"],
  "properties": {
    "analyzer": { "type": "string", "const": "size" },
    "repository": { "type": "string" },
    "tag": { "type": "string" },
    "multi_arch": { "type": "boolean" },
    "total_compressed_bytes": { "type": "integer", "minimum": 0 },
    "total_compressed_human": { "type": "string" },
    "layer_count": { "type": "integer", "minimum": 0 },
    "config_size_bytes": { "type": "integer", "minimum": 0 },
    "layers": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["index", "size_bytes", "size_human"],
        "properties": {
          "index": { "type": "integer", "minimum": 0 },
          "size_bytes": { "type": "integer", "minimum": 0 },
          "size_human": { "type": "string" }
        },
        "additionalProperties": false
      }
    },
    "platforms": {
      "type": ["array", "null"],
      "items": {
        "type": "object",
        "required": ["platform", "compressed_bytes", "compressed_human", "layer_count"],
        "properties": {
          "platform": { "type": "string" },
          "compressed_bytes": { "type": "integer", "minimum": 0 },
          "compressed_human": { "type": "string" },
          "layer_count": { "type": "integer", "minimum": 0 }
        },
        "additionalProperties": false
      }
    }
  },
  "additionalProperties": false
}
